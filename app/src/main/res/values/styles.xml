<resources>
    <!-- Base application theme. -->
    <style name="BackgammonTheme" parent="Theme.AppCompat">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/green_transp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/green_light</item>
    </style>

    <style name="ButtonScore" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">@dimen/space_huge</item>
        <item name="android:layout_marginLeft">@dimen/space_huge</item>
        <item name="android:layout_marginRight">@dimen/space_huge</item>
        <item name="android:background">@color/colorButtonScore</item>
    </style>

</resources>
