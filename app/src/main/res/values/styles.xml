<resources>
    <!-- Base application theme. -->
    <style name="BackgammonTheme" parent="Theme.AppCompat">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/green_transp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/green_light</item>
    </style>
</resources>
