<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgammonTheme" parent="Theme.AppCompat">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/green_transp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/green_light</item>
    </style>

    <style name="BackgammonBaseTheme" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>